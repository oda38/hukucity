 <div class="container">
  <div class="row">
    <div class="col-md-6">
      <h4 class="mt-5" >ユーザーの公開済み投稿一覧</h4>
    </div>
  </div>  
     <div class="col-md-8 mt-2 mx-auto">
      
    <table class="table table-striped table-light table-hover">
     <% @posts.each do |post| %>
      <tr>
        <td>
          <%= link_to admin_post_path(post.id) do %>
            <% if post.image.attached? %>
             <%= image_tag post.image, size: "100x80" %>
            <% else %>
             <%= image_tag 'no_image_irasutoya', size: "100x80" %>
            <% end %>
          <% end %>
        </td>
        <td>
         <div class="d-flex flex-column">
          <div>
            <%= link_to admin_post_path(post.id), class: "text-dark text-decoration-none" do %>      
              <strong><%= post.title.truncate(20) %></strong><% end %>
          </div>
          <div>
            <% if post.user.profile_image.attached? %>
             <%= image_tag post.user.profile_image, size: "30x30", class:"mt-3 rounded-circle"; %>
            <% else %>
             <%= image_tag 'no_image_irasutoya', size: "30x30", class:"mt-3 rounded-circle"; %>
            <% end %>
            <small><%= post.user.nickname %>
               <% if post.user.is_deleted == true %><p class="text-danger">(退会)</p><% end %></small>
          </div>
         </div>
        </td>
        <td>
          <%= post.created_at.strftime('%Y/%m/%d') %>
        </td> 
      </tr>
     <% end %>
    </table>
     <%= paginate @posts %>
    </div>  
      
</div>
      