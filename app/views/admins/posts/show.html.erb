<div class='container'>
 
  <div class="row mt-5">
    <div class="col-lg-4">
      <% if @user.profile_image.attached? %>
        <%= image_tag @user.profile_image, size: "50x50" %>
      <% else %>
        <%= image_tag 'no_image_irasutoya', size: "50x50" %>
      <% end %>
      
      <%= @user.nickname %>
    </div>
    
    <div class="col-lg-2 offset-lg-6" >
      <%= link_to "この投稿を削除する", admins_post_path(@post), data: { "turbo-method": :delete }, class: "btn btn-sm btn-success" %>
    </div>
  </div>
  
  <div class="row mt-5">
    <div class="col-lg-4" > 
      <%= image_tag @post.image, size: "300x300" %>
    </div>
  
    <div class="col-lg-4" >     
      <h4>【<%= @post.title %>】</h4>
      <p><%= @post.content %></p>
        <%= @post.tags.map(&:name).join(',') %>
    </div>
  </div> 
  
  <div class="row mt-5">
    <div class="col-lg-4 offset-lg-4">
      <% @post.comments.each do |comment| %>
        <% if @user.profile_image.attached? %>
          <%= image_tag @user.profile_image, size: "50x50" %>
        <% else %>
          <%= image_tag 'no_image_irasutoya', size: "50x50" %>
        <% end %>
       <%= comment.user.name %>
       <%= comment.created_at.strftime('%Y/%m/%d') %>
       <%= comment.comment %>
       
        <div>
          <%= link_to "コメント削除", admins_post_comment_path(comment.post.id, comment.id), data: { "turbo-method": :delete } %>
        </div>
      <% end %>
    </div>
  </div> 
  
</div>