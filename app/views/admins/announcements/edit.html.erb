<div class="container"> 
  <div class="row"> 

    <div class="col-md-6">  
      
      <%= form_with model:@announcement, url: admins_announcement_path(@announcement.id) do |f| %>
    　   <div class="form-group">
          <label class="text-secondary">タイトル</label><br>
          <%= f.text_field :title, :size=>"20" %>
        </div>
        
    　   <div class="form-group">
          <label class="text-secondary">画像</label><br>
          <%= f.file_field :announcement_image, accept: "image/*" %>
        </div>
    　 
        <div class="form-group">
          <label class="text-secondary">お知らせ内容</label><br>
          <%= f.text_area :content, class: 'form-control',size: "20x10" %>
        </div>
        
         
        <div class="row float-end">
          <div class="m-5">
            <%= f.submit '更新する', class: 'mr-5 btn btn-sm btn-warning text-white' %>
            <%= link_to "公開したお知らせを削除する", admins_announcement_path(@announcement.id), method: :delete, class: 'btn btn-sm btn-danger', "data-confirm" => "本当に削除しますか？" %>
          </div>
        </div>
        
     <% end %>
     
    </div>
    
  </div>
</div>
