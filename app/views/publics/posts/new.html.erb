<div class='container'>

  <div class="row mt-3">
    <div class="col-lg-3">
      <h4 class="m-3" >アイデア投稿</h4>
    </div>
  </div>
    
    
      <%= form_with model:@post do |f| %>
    　   <div class="form-group">
          <label class="text-secondary">タイトル</label><br>
          <%= f.text_field :title, :size=>"60" %>
        </div>
        
    　   <div class="form-group">
          <label class="text-secondary">画像</label><br>
          <%= f.file_field :image, accept: "image/*" %>
        </div>
    　 
        <div class="form-group">
          <label class="text-secondary">投稿内容</label><br>
          <%= f.text_area :content, class: 'form-control',size: "20x10" %>
        </div>
          
        <div class="form-group">
          <label class="text-secondary">タグ (#で区切ると複数タグ登録できます)</label><br>
          <%= f.text_field :name,class:"form-control"%>
        </div>
        
        
  <div class="row float-end">
    <div class="m-5">
      <%= f.submit '投稿を公開', :name => 'release', class: 'mr-5 btn btn-sm btn-warning text-white' %>
      <%= f.submit '下書きに保存', :name => 'draft', class: 'mr-5 btn btn-sm btn-outline-secondary' %>
    </div>
  </div>
        
     <% end %>
    
</div> 