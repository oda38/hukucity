<div class='container'>

  <div class="row mt-3">
    <div class="col-lg-3 offset-lg-1">
      <h4 class="m-3" >新規投稿</h4>
    </div>
  </div>
    
    
      <%= form_with model:@post do |f| %>
    　   <table class="table table-borderless mt-3">
    　    <tr>
           <td><%= f.label :画像 %></td>
           <td><%= f.file_field :image, accept: "image/*" %></td>
         </tr>
       　 <tr>
           <td><%= f.label :タイトル %></td>
           <td><%= f.text_field :title %></td>
         </tr>
         <tr>
           <td><%= f.label :投稿内容 %></td>
           <td><%= f.text_area :content %></td>
         </tr>
         <tr>
           <td><%= f.label"タグ (#で区切ると複数タグ登録できます)" %></td>
           <td><%= f.text_field :name,value: @tag_list,class:"form-control"%></td>
         </tr>
        </table>
        
  <div class="row">
    <div class="col-md-6 mx-auto">
     <div class="mb-5 mx-auto">
      <%= f.submit '記事を公開', :name => 'release', class: 'mr-5 btn btn-sm btn-warning text-white' %>
      <%= f.submit '下書きに保存', :name => 'draft', class: 'mr-5 btn btn-sm btn-outline-secondary' %>
     </div>
    </div>
  </div>
        
     <% end %>
    
</div> 