
 <div class="container">
  
  <div class="row">
    <h5 class="mt-5">ユーザー</h5>
  </div>

  <div class="col-md-8 offset-md-1 mt-2">  
    <table class="table table-striped table-light table-hover">
     
     <% @users.each do |user| %>
      <tr>
        <td>
          <% if user.profile_image.attached? %>
            <%= image_tag user.profile_image, size: "50x50" %>
          <% else %>
            <%= image_tag 'no_image_irasutoya', size: "50x50" %>
          <% end %>
        </td>
        <td><%= user.nickname %></td>
        <td>
          <div class="text-right">
            <%= link_to user_path(user.id), class: 'mr-5 btn btn-sm btn-outline-secondary' do %>
              <i class="fa-solid fa-arrow-up-right-from-square">&nbsp;このユーザーの投稿を見る</i><% end %>
          </div>
        </td>
      </tr>
     <% end %>

    </table>
  </div>
 
 