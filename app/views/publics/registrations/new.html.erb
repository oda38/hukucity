<div class="container">
  <div class="row">
    <div class="col-md-3">
      
      <h2 class="m-3">新規会員登録</h2>

     </div>
  </div> 
      

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "publics/shared/error_messages", resource: resource %>
    
    <div class="field">
      <%= f.label :名前（フルネーム） %><br>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "令和道子" %>
    </div>
  
    <div class="field">
      <%= f.label :名前（フリガナ） %><br>
      <%= f.text_field :name_kana, autofocus: true, autocomplete: "name_kana", placeholder: "レイワミチコ" %>
    </div>
  
    <div class="field">
      <%= f.label :ニックネーム %><br>
      <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
    </div>
  
    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  
    <div class="field">
      <%= f.label :電話番号 %><br />
      <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
    </div>
  

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions m-5">
      <%= f.submit "会員登録する" %>
    </div>
    
   <% end %>


  <%= render "publics/shared/links" %>
</div>